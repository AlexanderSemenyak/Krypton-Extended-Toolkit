<Project>

  <PropertyGroup>
    <TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
  </PropertyGroup>

  <!--Generate NuGet packages on build-->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <!--Package icon-->
    <PackageIcon>Assets\Canary.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Assets\Package Icon\Canary.png" PackagePath="Assets\" />

    <None Include="..\..\..\..\Assets\Package Icon\Stable.png" PackagePath="Assets\" />
  </ItemGroup>

  <!--Version information-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2110</AssemblyVersion>
    <FileVersion>6.0.2110</FileVersion>
    <LibraryVersion>6.0.2110</LibraryVersion>
    <Version>6.0.2110</Version>
  </PropertyGroup>

</Project>