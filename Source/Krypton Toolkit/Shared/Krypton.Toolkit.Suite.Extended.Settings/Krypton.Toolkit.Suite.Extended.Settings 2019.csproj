<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Settings</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Settings</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Settings</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package implements additional toolkit settings.</Description>
  </PropertyGroup>

  <!--Krypton Toolkit Import-->
  <Choose>
    <When Condition="'$(SolutionName.Endswith(`Nuget`))'">
      <ItemGroup>
        <!--Canary package-->
        <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2108.1" />

        <!--Stable package-->
        <!--<PackageReference Include="Krypton.Toolkit" Version="5.550.2108" />-->
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\..\..\..\..\Standard-Toolkit\Source\Krypton Components\Krypton.Toolkit\Krypton.Toolkit 2019.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Settings\Krypton.Toolkit.Suite.Extended.Settings.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Settings\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="Settings\Globals\GlobalBooleanSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>GlobalBooleanSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\Globals\GlobalEnumerationSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>GlobalEnumerationSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\Globals\GlobalStringSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>GlobalStringSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\Theming\ThemeSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ThemeSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="Settings\Globals\GlobalBooleanSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>GlobalBooleanSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings\Globals\GlobalEnumerationSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>GlobalEnumerationSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings\Globals\GlobalStringSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>GlobalStringSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings\Theming\ThemeSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>ThemeSettings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
