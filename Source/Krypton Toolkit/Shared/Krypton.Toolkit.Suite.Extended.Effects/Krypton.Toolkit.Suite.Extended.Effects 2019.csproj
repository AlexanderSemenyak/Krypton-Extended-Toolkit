<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Effects</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Effects</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Configurations>Debug;Release;Canary</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Effects</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package implements additional effects, to be used in conjunction with the standard toolkit.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2111.330-beta" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="6.2111.312" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Effects\Krypton.Toolkit.Suite.Extended.Effects.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Effects\</OutputPath>
  </PropertyGroup>

</Project>
