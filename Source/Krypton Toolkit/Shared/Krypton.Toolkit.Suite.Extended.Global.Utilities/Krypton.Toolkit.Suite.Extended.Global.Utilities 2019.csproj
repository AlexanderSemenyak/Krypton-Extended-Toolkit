<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Global.Utilities</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Global.Utilities</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Global.Utilities</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package holds extensions to the global utilities module.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2111.330-beta" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="6.2111.312" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Global.Utilities\Krypton.Toolkit.Suite.Extended.Global.Utilities.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Global.Utilities\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Krypton.Toolkit.Suite.Extended.Developer.Utilities\Krypton.Toolkit.Suite.Extended.Developer.Utilities 2019.csproj" />
    <ProjectReference Include="..\Krypton.Toolkit.Suite.Extended.Tools\Krypton.Toolkit.Suite.Extended.Tools 2019.csproj" />
  </ItemGroup>

</Project>
