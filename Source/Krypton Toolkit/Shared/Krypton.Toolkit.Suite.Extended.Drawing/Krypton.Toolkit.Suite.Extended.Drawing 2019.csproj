<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Drawing</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Drawing</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Configurations>Debug;Release;Canary</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Drawing</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package holds drawing utilities.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2111.330-beta" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="6.2111.312" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Drawing\Krypton.Toolkit.Suite.Extended.Drawing.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Drawing\</OutputPath>
  </PropertyGroup>

</Project>