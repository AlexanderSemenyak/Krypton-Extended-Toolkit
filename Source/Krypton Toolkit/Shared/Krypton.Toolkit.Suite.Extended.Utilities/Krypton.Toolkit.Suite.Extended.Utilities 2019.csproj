<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
    </PropertyGroup>
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Utilities</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Utilities</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Configurations>Debug;Release;Canary</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Utilities</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package implements additional toolkit utilities.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2111.330-beta" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="6.2111.312" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Utilities\Krypton.Toolkit.Suite.Extended.Utilities.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Utilities\</OutputPath>
  </PropertyGroup>

</Project>
