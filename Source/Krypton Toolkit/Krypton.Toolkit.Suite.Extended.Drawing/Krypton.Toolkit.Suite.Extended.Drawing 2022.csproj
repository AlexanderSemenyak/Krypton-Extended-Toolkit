<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Drawing</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Drawing</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Configurations>Debug;Release;Nightly;Canary;Stable</Configurations>
  </PropertyGroup>

  <!--Package Data-->
	<Choose>
		<When Condition="'$(Configuration)' == 'Canary'">
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Drawing.Canary</PackageId>
			</PropertyGroup>
		</When>

		<When Condition="'$(Configuration)' == 'Nightly'">
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Drawing.Nightly</PackageId>
			</PropertyGroup>
		</When>
		<Otherwise>
			<PropertyGroup>
				<PackageId>Krypton.Toolkit.Suite.Extended.Drawing</PackageId>
			</PropertyGroup>
		</Otherwise>
	</Choose>

	<PropertyGroup>
		<Description>
			An extension to the Standard Toolkit, which supports .NET Framework 4.6.2 - 4.8, .NET Core 3.1 and .NET 5/6. This package implements base drawing utilities.

			This package supports all .NET Framework versions starting .NET Framework 4.6.2 - 4.8, .NET Core 3.1 and .NET 5/6.
			Also, all libraries are included targeting each specific framework version for performance purposes.

			To view all of the extended toolkit package latest version information, please visit: https://github.com/Krypton-Suite/Krypton-Toolkit-Suite-Version-Dashboard/blob/main/Documents/Modules/Extended/Krypton-Toolkit-Suite-Extended-Modules.md
		</Description>
	</PropertyGroup>

  <Choose>
	  <When Condition="'$(Configuration)' == 'Canary'">
		  <PropertyGroup>
			  <LangVersion>preview</LangVersion>
		  </PropertyGroup>

		  <ItemGroup>
			  <PackageReference Include="Krypton.Toolkit.Canary" Version="60.22.1.23-beta" />
		  </ItemGroup>
	  </When>

	  <When Condition="'$(Configuration)' == 'Nightly'">
		  <PropertyGroup>
			  <LangVersion>preview</LangVersion>
		  </PropertyGroup>

		  <ItemGroup>
			  <PackageReference Include="Krypton.Toolkit.Nightly" Version="60.22.1.22-alpha" />
		  </ItemGroup>
	  </When>
	  <Otherwise>
		  <PropertyGroup>
			  <LangVersion>preview</LangVersion>
		  </PropertyGroup>

		  <ItemGroup>
			  <PackageReference Include="Krypton.Toolkit" Version="6.2201.4" />
		  </ItemGroup>
	  </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Drawing\Krypton.Toolkit.Suite.Extended.Drawing.xml</DocumentationFile>
    <OutputPath>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Drawing\</OutputPath>
  </PropertyGroup>

</Project>