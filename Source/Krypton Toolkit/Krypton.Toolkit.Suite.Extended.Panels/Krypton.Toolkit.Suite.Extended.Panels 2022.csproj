<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Panels</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Panels</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <NeutralLanguage>en</NeutralLanguage>
    <Configurations>Debug;Release;Nightly;Canary;Stable</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
       <PackageId>Krypton.Toolkit.Suite.Extended.Panels</PackageId>
       <Description>An extension to the Krypton standard toolkit. This package implements palette creation tools.</Description>
  </PropertyGroup>

	<Choose>
		<When Condition="'$(Configuration)' == 'Canary'">
			<ItemGroup>
				<None Include="Package Icons\Canary.png" Link="Canary.png" Pack="true" PackagePath="" />
			</ItemGroup>

			<PropertyGroup>
				<PackageIcon>Canary.png</PackageIcon>
			</PropertyGroup>
		</When>

		<When Condition="'$(Configuration)' == 'Nightly'">
			<ItemGroup>
				<None Include="Package Icons\Nightly.png" Link="Nightly.png" PackagePath="" />
			</ItemGroup>

			<PropertyGroup>
				<PackageIcon>Nightly.png</PackageIcon>
			</PropertyGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<None Include="Package Icons\Stable.png" Link="Stable.png" Pack="true" PackagePath="" />
			</ItemGroup>

			<PropertyGroup>
				<PackageIcon>Stable.png</PackageIcon>
			</PropertyGroup>
		</Otherwise>
	</Choose>

  <Choose>
	  <When Condition="'$(Configuration)' == 'Canary'">
		  <PropertyGroup>
			  <LangVersion>preview</LangVersion>
		  </PropertyGroup>

		  <ItemGroup>
			  <PackageReference Include="Krypton.Toolkit.Canary" Version="6.22.1.10-beta" />
		  </ItemGroup>
	  </When>
	  <Otherwise>
		  <PropertyGroup>
			  <LangVersion>preview</LangVersion>
		  </PropertyGroup>

		  <ItemGroup>
			  <PackageReference Include="Krypton.Toolkit" Version="6.2201.4" />
		  </ItemGroup>
	  </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Panels\Krypton.Toolkit.Suite.Extended.Panels.xml</DocumentationFile>
    <OutputPath>..\..\..\Bin\$(configuration)\Krypton.Toolkit.Suite.Extended.Panels\</OutputPath>
  </PropertyGroup>

</Project>
