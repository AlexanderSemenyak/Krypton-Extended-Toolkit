<Project Sdk="Microsoft.NET.Sdk">
  
    <PropertyGroup>
        <LangVersion>preview</LangVersion>
        <OutputType>library</OutputType>
        <RootNamespace>Krypton.Toolkit.Suite.Extended.DataGridView</RootNamespace>
        <AssemblyName>Krypton.Toolkit.Suite.Extended.DataGridView</AssemblyName>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>

    <!--Package Data-->
    <PropertyGroup>
        <PackageId>Krypton.Toolkit.Suite.Extended.DataGridView</PackageId>
        <Description>An extension to the Krypton standard toolkit DataGridView. This package implements additional Column types and Master-Detail views.</Description>
    </PropertyGroup>

    <!--Version Information-->
    <PropertyGroup>
        <AssemblyVersion>6.0.2108</AssemblyVersion>
        <FileVersion>6.0.2108</FileVersion>
    </PropertyGroup>

    <!--Krypton Toolkit Import-->
    <Choose>
        <When Condition="'$(TFMs)' == 'all'">
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106.1" />
            </ItemGroup>
        </When>
        <Otherwise>
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2106.1" />
            </ItemGroup>
        </Otherwise>
    </Choose>

    <!--Binary/Documentation Output-->
    <PropertyGroup>
        <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.DataGridView\Krypton.Toolkit.Suite.Extended.DataGridView.xml</DocumentationFile>
        <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.DataGridView\</OutputPath>
    </PropertyGroup>
  
  <!--TODO: Help!!-->
  <ItemGroup>
    <!--<Reference Include="System.ValueTuple" />-->

    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>
  
</Project>
