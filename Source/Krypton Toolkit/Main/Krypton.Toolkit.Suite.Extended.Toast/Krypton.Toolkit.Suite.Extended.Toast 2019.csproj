<Project Sdk="Microsoft.NET.Sdk">

  <!--Setup TFMs for all projects-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Toast</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Toast</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Toast</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package holds a framework that allows the creation of toast notifications.</Description>
  </PropertyGroup>

  <!--Version information-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2108.1</AssemblyVersion>
    <FileVersion>6.0.2108.1</FileVersion>
    <LibraryVersion>6.0.2108.1</LibraryVersion>
    <Version>6.0.2108.1</Version>
  </PropertyGroup>

  <!--Krypton Toolkit Import-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2108.1" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2108.1" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Toast\Krypton.Toolkit.Suite.Extended.Toast.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Toast\</OutputPath>
  </PropertyGroup>

</Project>
