<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Panels</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Panels</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <NeutralLanguage>en</NeutralLanguage>
    <Configurations>Debug;Release;Canary</Configurations>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Panels</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package implements palette creation tools.</Description>
  </PropertyGroup>

  <Choose>
      <When Condition="'$(Configuration)' == 'Canary'">
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit.Canary" Version="6.2111.330-beta" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
              <PackageReference Include="Krypton.Toolkit" Version="6.2111.312" />
          </ItemGroup>
      </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Panels\Krypton.Toolkit.Suite.Extended.Panels.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Panels\</OutputPath>
  </PropertyGroup>

</Project>
