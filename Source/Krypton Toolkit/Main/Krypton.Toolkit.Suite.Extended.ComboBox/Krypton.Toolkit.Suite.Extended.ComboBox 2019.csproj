<Project Sdk="Microsoft.NET.Sdk">
  
    <PropertyGroup>
        <LangVersion>preview</LangVersion>
        <OutputType>library</OutputType>
        <RootNamespace>Krypton.Toolkit.Suite.Extended.ComboBox</RootNamespace>
        <AssemblyName>Krypton.Toolkit.Suite.Extended.ComboBox</AssemblyName>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>

    <!--Package Data-->
    <PropertyGroup>
        <PackageId>Krypton.Toolkit.Suite.Extended.ComboBox</PackageId>
        <Description>An extension to the Krypton standard toolkit ComboBox. This package implements additional Drop Down types and views.</Description>
    </PropertyGroup>

    <!--Version Information-->
    <PropertyGroup>
        <AssemblyVersion>6.0.2108</AssemblyVersion>
        <FileVersion>6.0.2108</FileVersion>
    </PropertyGroup>

    <!--Krypton Toolkit Import-->
    <Choose>
        <When Condition="'$(TFMs)' == 'all'">
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106.2" />
            </ItemGroup>
        </When>
        <Otherwise>
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2106.2" />
            </ItemGroup>
        </Otherwise>
    </Choose>

    <!--Binary/Documentation Output-->
    <PropertyGroup>
        <DocumentationFile>..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.ComboBox\Krypton.Toolkit.Suite.Extended.ComboBox.xml</DocumentationFile>
        <OutputPath>..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.ComboBox\</OutputPath>
    </PropertyGroup>
    <ItemGroup>
      <ProjectReference Include="..\..\Shared\Krypton.Toolkit.Suite.Extended.Common\Krypton.Toolkit.Suite.Extended.Common 2019.csproj" />
      <ProjectReference Include="..\..\Shared\Krypton.Toolkit.Suite.Extended.Drawing\Krypton.Toolkit.Suite.Extended.Drawing 2019.csproj" />
      <ProjectReference Include="..\..\Shared\Krypton.Toolkit.Suite.Extended.Tools\Krypton.Toolkit.Suite.Extended.Tools 2019.csproj" />
    </ItemGroup>
</Project>
