<Project Sdk="Microsoft.NET.Sdk">

    <Choose>
        <When Condition="'$(TFMs)' == 'all'">
            <PropertyGroup>
                <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
            </PropertyGroup>
        </When>
        <Otherwise>
            <PropertyGroup>
                <TargetFrameworks>net45;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
            </PropertyGroup>
        </Otherwise>
    </Choose>
    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <OutputType>library</OutputType>
        <RootNamespace>Krypton.Toolkit.Suite.Extended.Data.Grid.View</RootNamespace>
        <AssemblyName>Krypton.Toolkit.Suite.Extended.Data.Grid.View</AssemblyName>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>

    <!--Package Data-->
    <PropertyGroup>
        <PackageId>Krypton.Toolkit.Suite.Extended.Data.Grid.View</PackageId>
        <Description>An extension to the Krypton standard toolkit DataGridView. This package implements additional Column types and Master-Detail views.</Description>
    </PropertyGroup>

    <!--Version Information-->
    <PropertyGroup>
        <AssemblyVersion>6.0.2108</AssemblyVersion>
        <FileVersion>6.0.2108</FileVersion>
    </PropertyGroup>

    <!--Krypton Toolkit Import-->
    <Choose>
        <When Condition="'$(TFMs)' == 'all'">
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106" />
            </ItemGroup>
        </When>
        <Otherwise>
            <ItemGroup>
                <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2106" />
            </ItemGroup>
        </Otherwise>
    </Choose>

    <!--Binary/Documentation Output-->
    <PropertyGroup>
        <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Data.Grid.View\Krypton.Toolkit.Suite.Extended.Data.Grid.View.xml</DocumentationFile>
        <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Data.Grid.View\</OutputPath>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    </ItemGroup>
</Project>
