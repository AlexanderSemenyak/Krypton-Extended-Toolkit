<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <OutputType>library</OutputType>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Circular.ProgressBar</RootNamespace>
    <AssemblyName>Krypton.Toolkit.Suite.Extended.Circular.ProgressBar</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!--Package Data-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Circular.ProgressBar</PackageId>
    <Description>An extension to the Krypton standard toolkit. This package holds the circular progress bar control.</Description>
  </PropertyGroup>

  <!--Version Information-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2108</AssemblyVersion>
    <FileVersion>6.0.2108</FileVersion>
  </PropertyGroup>

  <!--Krypton Toolkit Import-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106.2" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary.Lite" Version="6.0.2106.2" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <!--Binary/Documentation Output-->
  <PropertyGroup>
    <DocumentationFile>..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Circular.ProgressBar\Krypton.Toolkit.Suite.Extended.Circular.ProgressBar.xml</DocumentationFile>
    <OutputPath>..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.Circular.ProgressBar\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Unofficial.WinFormAnimation-NET" Version="2.0.1" />
  </ItemGroup>

</Project>
