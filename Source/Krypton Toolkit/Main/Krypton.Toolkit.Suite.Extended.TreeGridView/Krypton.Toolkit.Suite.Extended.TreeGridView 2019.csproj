<Project Sdk="Microsoft.NET.Sdk">

  <!--Setup TFMs for all projects-->
  <Choose>
    <When Condition="'$(TFMs)' == 'all'">
      <PropertyGroup>
        <TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>

    <PropertyGroup>
        <LangVersion>preview</LangVersion>
        <OutputType>library</OutputType>
        <UseWindowsForms>true</UseWindowsForms>
        <RootNamespace>Krypton.Toolkit.Suite.Extended.TreeGridView</RootNamespace>
        <AssemblyName>Krypton.Toolkit.Suite.Extended.TreeGridView</AssemblyName>
        <!--<TreatWarningsAsErrors>true</TreatWarningsAsErrors>-->
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <AnalysisLevel>latest</AnalysisLevel>
        <NeutralLanguage>en</NeutralLanguage>
    </PropertyGroup>

    <!--Package Data-->
    <PropertyGroup>
        <PackageId>Krypton.Toolkit.Suite.Extended.TreeGridView</PackageId>
        <Description>An extension to the Krypton standard toolkit. This package holds items to create tree grid views for your applications.</Description>
    </PropertyGroup>

  <!--Version information-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2109</AssemblyVersion>
    <FileVersion>6.0.2109</FileVersion>
    <LibraryVersion>6.0.2109</LibraryVersion>
    <Version>6.0.2109</Version>
  </PropertyGroup>

    <!--Krypton Toolkit Import-->
  <Choose>
    <When Condition="'$(SolutionName.Endswith(`Nuget`))'">
      <ItemGroup>
        <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2109" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\..\..\..\..\Standard-Toolkit\Source\Krypton Components\Krypton.Toolkit\Krypton.Toolkit 2019.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
      <Reference Include="System.Design, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" Condition="$(TargetFramework.StartsWith('net4'))">
          <SpecificVersion>True</SpecificVersion>
          <Version>4.0.0.0</Version>
          <TreatAsUsed>True</TreatAsUsed>
      </Reference>
      <Reference Include="System.Design, Version=5.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" Condition="$(TargetFramework.StartsWith('net5'))">
          <SpecificVersion>True</SpecificVersion>
          <Version>5.0.0.0</Version>
          <TreatAsUsed>True</TreatAsUsed>
      </Reference>
      <Reference Include="System.Design, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" Condition="$(TargetFramework.StartsWith('net6'))">
          <SpecificVersion>True</SpecificVersion>
          <Version>6.0.0.0</Version>
          <TreatAsUsed>True</TreatAsUsed>
      </Reference>
      <Reference Include="System.Design" Condition="'$(TargetFramework)' == 'net35'" />
      <!--TODO: Need to specify version here-->
  </ItemGroup>
    <!--Binary/Documentation Output-->
    <PropertyGroup>
        <DocumentationFile>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.TreeGridView\Krypton.Toolkit.Suite.Extended.TreeGridView.xml</DocumentationFile>
        <OutputPath>..\..\..\..\Bin\$(configuration)\Main\Krypton.Toolkit.Suite.Extended.TreeGridView\</OutputPath>
    </PropertyGroup>

</Project>
