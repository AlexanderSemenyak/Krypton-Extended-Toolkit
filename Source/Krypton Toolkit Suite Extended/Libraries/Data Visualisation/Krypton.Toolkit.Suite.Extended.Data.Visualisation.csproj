<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(TFMs)' == 'all'">net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Data.Visualisation</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <PropertyGroup>
    <Description>An extension to the standard krypton toolkit to support .NET Core and the latest .NET 3.5/4.x framework. Contains chart controls.</Description>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackagePath></PackagePath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Data.Visualisation</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIconUrl>https://raw.githubusercontent.com/Krypton-Suite/Extended-Toolkit/master/Assets/PNG/Main%20Icon/64%20x%2064/Main%20Icon%2064%20x%2064.png</PackageIconUrl>
  </PropertyGroup>-->

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Data.Visualisation.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIconUrl>https://raw.githubusercontent.com/Krypton-Suite/Extended-Toolkit/master/Assets/PNG/Main%20Icon/64%20x%2064/Main%20Icon%2064%20x%2064%20Canary.png</PackageIconUrl>
  </PropertyGroup>

  <!--Version configuration-->
  <PropertyGroup>
    <AssemblyVersion>5.550.2010</AssemblyVersion>
    <FileVersion>5.550.2010</FileVersion>
    <Version>5.550.2010</Version>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2008" />
  </ItemGroup>
  
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Data.Visualisation\Krypton.Toolkit.Extended.Data.Visualisation.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Data.Visualisation\</OutputPath>
  </PropertyGroup>

</Project>
