<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Rounded.Controls</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. Contains options to make control corners rounded.</Description>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Rounded.Controls.Canary</PackageId>
      <TargetFrameworks>net45;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
      <TargetFrameworks Condition="'$(TFMs)' == 'all'">net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows;net6.0-windows</TargetFrameworks>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIcon>Canary.png</PackageIcon>
    <AssemblyVersion>6.0.2106</AssemblyVersion>
    <FileVersion>6.0.2106</FileVersion>
    <Version>6.0.2106</Version>
  </PropertyGroup>

  <!--Nightly package configuration-
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <PackageId>Krypton.Toolkit.Suite.Extended.Rounded.Controls.Nightly</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Nightly</PackageOutputPath>
    <PackageIcon>Nightly.png</PackageIcon>
    <VersionSuffix>pre$([System.DateTime]::UtcNow.ToString(yyyyMMdd-HHmm))</VersionSuffix>
  </PropertyGroup>-->

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Rounded.Controls</PackageId>
      <TargetFrameworks>net45;netcoreapp3.1;net5.0-windows</TargetFrameworks>
      <TargetFrameworks Condition="'$(TFMs)' == 'all'">net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIcon>Stable.png</PackageIcon>
    <AssemblyVersion>5.550.2106</AssemblyVersion>
    <FileVersion>5.550.2106</FileVersion>
    <Version>5.550.2106</Version>
  </PropertyGroup>-->

  <!--Stable NuGet package configuration-
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2103" />
  </ItemGroup>-->

  <!--Canary NuGet package configuration-->
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2106" />
  </ItemGroup>

  <ItemGroup>
    <!--Canary icon-->
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />

    <!--Stable icon-->
    <None Include="Package Icons\Stable.png" Pack="true" PackagePath="\" />

    <!--Nightly icon-->
    <None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\Libraries\Base\Krypton.Toolkit.Suite.Extended.Base.csproj" />
  </ItemGroup>
  
  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Rounded.Controls\Krypton.Toolkit.Suite.Extended.Rounded.Controls.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Rounded.Controls\</OutputPath>
  </PropertyGroup>

</Project>
