<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Task.Dialogs</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. This contains task dialogs.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Task.Dialogs.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIcon>Canary.png</PackageIcon>
    <AssemblyVersion>6.0.2102</AssemblyVersion>
    <FileVersion>6.0.2102</FileVersion>
    <Version>6.0.2102</Version>
  </PropertyGroup>

  <!--Nightly package configuration-
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <PackageId>Krypton.Toolkit.Suite.Extended.Task.Dialogs.Nightly</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Nightly</PackageOutputPath>
    <PackageIcon>Nightly.png</PackageIcon>
    <VersionSuffix>pre$([System.DateTime]::UtcNow.ToString(yyyyMMdd-HHmm))</VersionSuffix>
  </PropertyGroup>-->

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Task.Dialogs</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIcon>Stable.png</PackageIcon>
    <AssemblyVersion>5.550.2102</AssemblyVersion>
    <FileVersion>5.550.2102</FileVersion>
    <Version>5.550.2102</Version>
  </PropertyGroup>-->

  <ItemGroup>
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />
    <!--<None Include="Package Icons\Stable.png" Pack="true" PackagePath="\" />-->
    <!--<None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />-->
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Task.Dialogs\Krypton.Toolkit.Suite.Extended.Task.Dialogs.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Task.Dialogs\</OutputPath>
  </PropertyGroup>
  
</Project>
