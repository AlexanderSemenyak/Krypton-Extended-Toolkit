  <!--Stable package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Notifications</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIcon>Stable.png</PackageIcon>
    <AssemblyVersion>5.550.2102</AssemblyVersion>
    <FileVersion>5.550.2102</FileVersion>
    <Version>5.550.2102</Version>
  </PropertyGroup>

  <!--Stable NuGet package configuration-->
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2011" />
  </ItemGroup>

