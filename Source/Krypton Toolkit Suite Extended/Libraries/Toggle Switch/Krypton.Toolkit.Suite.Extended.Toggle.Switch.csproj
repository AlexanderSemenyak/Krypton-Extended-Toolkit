<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Toggle.Switch</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <!--Basic package configuration-->
  <PropertyGroup>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. This is the toggle switch module.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Toggle.Switch.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIcon>Canary.png</PackageIcon>
    <AssemblyVersion>6.0.2105</AssemblyVersion>
    <FileVersion>6.0.2105</FileVersion>
    <Version>6.0.2105</Version>
  </PropertyGroup>

  <!--Nightly package configuration-
