<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Object.ListView</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <PropertyGroup>
    <Description>ObjectListView is a .NET ListView wired on caffeine, guarana and steroids. More calmly, it is a C# wrapper around a .NET ListView, which makes the ListView much easier to use and teaches it lots of neat new tricks.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>GPL-3</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <Authors>Phillip Piper (c) 2006 - 2016. Modifications by Krypton Suite, 2020 - 2021</Authors>
    <PackageTags>ListView WinForms Controls WinForms Krypton .NET .NET Core</PackageTags>
  </PropertyGroup>

  <!--Stable package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Object.ListView</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIconUrl>https://tinyurl.com/KryptonExtendedToolkitIcon</PackageIconUrl>
    <PackageIcon>Icon Stable.png</PackageIcon>
  </PropertyGroup>

  <!--Canary package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Object.ListView.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIconUrl>https://tinyurl.com/KryptonToolkitCanaryIcon</PackageIconUrl>
  </PropertyGroup>-->

  <!--Stable NuGet package configuration-->
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2101" />
  </ItemGroup>

  <!--Canary NuGet package configuration-
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2101" />
  </ItemGroup>-->

  <!--Version configuration-->
  <PropertyGroup>
    <AssemblyVersion>5.550.2101</AssemblyVersion>
    <FileVersion>5.550.2101</FileVersion>
    <Version>5.550.2101</Version>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Object.ListView\Krypton.Toolkit.Suite.Extended.Object.ListView.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Object.ListView\</OutputPath>
  </PropertyGroup>

</Project>
