<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Standard.Controls</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. This contains enhancements for controls.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Standard.Controls</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIcon>Stable.png</PackageIcon>
  </PropertyGroup>-->

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Standard.Controls.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIcon>Canary.png</PackageIcon>
  </PropertyGroup>

  <!--Stable NuGet package configuration-
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2011" />
  </ItemGroup>-->

  <!--Canary NuGet package configuration-->
  <ItemGroup>
    <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2101" />
  </ItemGroup>

  <!--Stable NuGet version configuration-
  <PropertyGroup>
    <AssemblyVersion>5.550.2102</AssemblyVersion>
    <FileVersion>5.550.2102</FileVersion>
    <Version>5.550.2102</Version>
  </PropertyGroup>-->

  <!--Canary NuGet version configuration-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2102</AssemblyVersion>
    <FileVersion>6.0.2102</FileVersion>
    <Version>6.0.2102</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />
    <!--<None Include="Package Icons\Stable.png" Pack="true" PackagePath="\" />-->
    <!--<None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />-->
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Toolkit Core\Krypton.Toolkit.Suite.Extended.Core.csproj" />
    <ProjectReference Include="..\..\Shared\Toolkit Language Model\Krypton.Toolkit.Suite.Extended.Language.Model.csproj" />
    <ProjectReference Include="..\Base\Krypton.Toolkit.Suite.Extended.Base.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Standard.Controls\Krypton.Toolkit.Suite.Extended.Standard.Controls.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Extended.Standard.Controls\</OutputPath>
  </PropertyGroup>

</Project>
