<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>Krypton.Toolkit.Suite.Extended.Error.Reporting</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <!--Basic package configuration-->
  <PropertyGroup>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. This is the error reporting module.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicense>https://raw.githubusercontent.com/Krypton-Suite/Extended-Toolkit/master/LICENSE</PackageLicense>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
  </PropertyGroup>

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Base</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIconUrl>https://tinyurl.com/KryptonExtendedToolkitIcon</PackageIconUrl>
    <PackageIcon>Icon Stable.png</PackageIcon>
  </PropertyGroup>-->

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Base.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIconUrl>https://tinyurl.com/KryptonToolkitCanaryIcon</PackageIconUrl>
  </PropertyGroup>

  <!--Stable NuGet packages
  <ItemGroup>
    <PackageReference Include="Krypton.Navigator" Version="5.550.2011" />
    <PackageReference Include="Krypton.Toolkit" Version="5.550.2011" />
  </ItemGroup>-->

  <!--Canary NuGet package configuration-->
  <ItemGroup>
    <PackageReference Include="Krypton.Navigator.Canary" Version="6.0.2008" />
    <PackageReference Include="Krypton.Toolkit.Canary" Version="6.0.2008" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="DotNetZip" Version="1.14.0" />
    <PackageReference Include="Simple-MAPI.NET" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Krypton.Toolkit.Suite.Extended.Base">
      <HintPath>..\Base\obj\Debug\net45\Krypton.Toolkit.Suite.Extended.Base.dll</HintPath>
    </Reference>
    <Reference Include="Krypton.Toolkit.Suite.Extended.Dialogs">
      <HintPath>..\Extended Dialogs\obj\Debug\net45\Krypton.Toolkit.Suite.Extended.Dialogs.dll</HintPath>
    </Reference>
    <Reference Include="System.Deployment" />
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net452'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net462'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net47'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net471'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0-windows'">
    <PackageReference Include="Handlebars.Net">
      <Version>1.11.5</Version>
    </PackageReference>
  </ItemGroup>
  

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <!--Version configuration-->
  <PropertyGroup>
    <AssemblyVersion>5.550.2101</AssemblyVersion>
    <FileVersion>5.550.2101</FileVersion>
    <Version>5.550.2101</Version>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Error.Reporting\Krypton.Toolkit.Suite.Error.Reporting.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Libraries\Krypton.Toolkit.Suite.Error.Reporting\</OutputPath>
  </PropertyGroup>

</Project>
