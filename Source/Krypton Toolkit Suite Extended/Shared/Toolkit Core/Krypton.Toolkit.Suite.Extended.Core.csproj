<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <TargetFrameworks>net45;netcoreapp3.1</TargetFrameworks>
    <TargetFrameworks Condition="'$(TFMs)' == 'all'">net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1</TargetFrameworks>

    <!--<TargetFrameworks>net35;net40;net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1</TargetFrameworks>-->
    
    <RootNamespace>Krypton.Toolkit.Extended.Core</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EasyScintilla" Version="1.0.5" />
    <PackageReference Include="Krypton.Docking.Experimental" Version="5.500.2003" />
    <PackageReference Include="Krypton.Navigator.Experimental" Version="5.500.2003" />
    <PackageReference Include="Krypton.Ribbon.Experimental" Version="5.500.2003" />
    <PackageReference Include="Krypton.Toolkit.Experimental" Version="5.500.2003" />
    <PackageReference Include="WindowsAPICodePack" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Toolkit Settings\Krypton.Toolkit.Suite.Extended.Settings.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\ImageResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ImageResources.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\MiscellaneousResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MiscellaneousResources.resx</DependentUpon>
    </Compile>
    <Compile Update="Settings\CoreSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>CoreSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\ImageResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ImageResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\MiscellaneousResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>MiscellaneousResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings\CoreSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>CoreSettings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="AutoCompleteMenu-ScintillaNET">
      <Version>1.6.2</Version>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Krypton.Toolkit.Extended.Core.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\</OutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyVersion>5.500.2004</AssemblyVersion>
    <FileVersion>5.500.2004</FileVersion>
  </PropertyGroup>

</Project>
