<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>    
    <RootNamespace>Krypton.Extended.Toolkit.Resources</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>An extension to the standard krypton toolkit to support .NET Core, .NET 5 and the latest .NET 3.5/4.x framework. This package contains toolkit resources.</Description>
    <RepositoryUrl>https://github.com/Krypton-Suite/Extended-Toolkit</RepositoryUrl>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <!--Stable package configuration-
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Resources</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Stable</PackageOutputPath>
    <PackageIcon>Stable.png</PackageIcon>
  </PropertyGroup>-->

  <!--Canary package configuration-->
  <PropertyGroup>
    <PackageId>Krypton.Toolkit.Suite.Extended.Resources.Canary</PackageId>
    <PackageOutputPath>..\..\..\..\Bin\NuGet\Canary</PackageOutputPath>
    <PackageIcon>Canary.png</PackageIcon>
  </PropertyGroup>

  <!--Stable NuGet version configuration-
  <PropertyGroup>
    <AssemblyVersion>5.550.2102</AssemblyVersion>
    <FileVersion>5.550.2102</FileVersion>
    <Version>5.550.2102</Version>
  </PropertyGroup>-->

  <!--Canary NuGet version configuration-->
  <PropertyGroup>
    <AssemblyVersion>6.0.2102</AssemblyVersion>
    <FileVersion>6.0.2102</FileVersion>
    <Version>6.0.2102</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Package Icons\Canary.png" Pack="true" PackagePath="\" />
    <!--<None Include="Package Icons\Stable.png" Pack="true" PackagePath="\" />-->
    <!--<None Include="Package Icons\Nightly.png" Pack="true" PackagePath="\" />-->
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Images\AllToolkitImageResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>AllToolkitImageResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Images\AllToolkitImageResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>AllToolkitImageResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Resources\Krypton.Toolkit.Suite.Extended.Resources.xml</DocumentationFile>
    <OutputPath>..\..\..\..\Bin\$(configuration)\Shared\Krypton.Toolkit.Suite.Extended.Resources\</OutputPath>
  </PropertyGroup>
</Project>
